<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".hakkinda">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vipahakkinda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayouthakkinda"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/tablayout_shape"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabIconTint="@color/white"
        app:tabIndicator="@color/toolbarrenk"
        app:tabIndicatorColor="@color/toolbarrenk"
        app:tabRippleColor="@color/toolbarçicgirenk"
        app:tabSelectedTextColor="@color/toolbarçicgirenk"
        app:tabTextColor="@color/toolbarrenk">


    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>